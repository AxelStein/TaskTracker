<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_inbox">

    <fragment
        android:id="@+id/fragment_inbox"
        android:name="com.axel_stein.tasktracker.ui.task_list.TaskListFragment"
        android:label="Inbox" >
        <argument
            android:name="BUNDLE_VIEW_MODEL"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/fragment_completed"
        android:name="com.axel_stein.tasktracker.ui.task_list.TaskListFragment"
        android:label="Completed" >
        <argument
            android:name="BUNDLE_VIEW_MODEL"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <fragment
        android:id="@+id/fragment_trash"
        android:name="com.axel_stein.tasktracker.ui.task_list.TaskListFragment"
        android:label="Trash" >
        <argument
            android:name="BUNDLE_VIEW_MODEL"
            app:argType="integer"
            android:defaultValue="2" />
    </fragment>

</navigation>
